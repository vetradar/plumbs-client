{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./lib",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["./example", "./lib", "./node_modules"]
}
